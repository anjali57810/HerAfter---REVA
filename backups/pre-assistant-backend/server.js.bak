// Chat simulation route
app.post("/chat", (req, res) => {
    const userMessage = req.body.message;

    let reply = "You're doing amazing. I'm here for you ðŸ’œ";

    if (userMessage.toLowerCase().includes("tired")) {
        reply = "It's okay to feel tired. Rest when your baby rests ðŸ¤";
    } else if (userMessage.toLowerCase().includes("sad")) {
        reply = "You're not alone. Your feelings are valid ðŸ’œ";
    }

    res.json({ response: reply });
});

